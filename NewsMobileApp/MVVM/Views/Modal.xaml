<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="NewsMobileApp.MVVM.Views.Modal">

    <VerticalStackLayout Padding="30, 20, 30, 20" Margin="20, 20, 20, 20">
        <Label Text="Select From"/>
        <DatePicker x:Name="dp1" MinimumDate="01/01/2023" MaximumDate="12/31/2023" Date="01/01/2023" />
        <Label Text="To" />
        <DatePicker x:Name="dp2" MinimumDate="01/01/2023" MaximumDate="12/31/2023" Date="12/31/2023"/>
        <Button Margin="20, 20, 20, 20" Text="Filter" Clicked="filterBtn"></Button>
    </VerticalStackLayout>
</toolkit:Popup>